{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@core/*": ["src/components/core/*"],
      "@assets/*": ["src/assets/*"],
      "@types/*": ["src/types/*"],
      "@api/*": ["src/api/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
